@model IEnumerable<Employee>

<table class="table table-hover mt-5 table-bordered table-shadow">
    <thead class="bg-light text-center">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Gender</th>
            <th>JobRole</th>
            <th>StartDate</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="6" class="text-center">No Employee Found</td>
            </tr>
        }
        else
        {

            @foreach (var Employee in Model)
            {
                <tr >
                    <td>@Employee.Id</td>
                    <td>@Employee.Name</td>
                    <td>@Employee.Gender</td>
                    <td>@Employee.JobRole</td>
                    <td>@Employee.StartDate</td>
                    <td >
                        <a href="#" class="btn btn-sm btn-outline-primary mx-1 details-btn"><i class="fa fa-info"></i> Details</a>
                        <a href="#" class="btn btn-sm btn-light mx-1 update-btn"><i class="fa fa-pen-nib"></i> Update</a>
                        <a href="#" class="btn btn-sm btn-danger mx-1 delete-btn"><i class="fa fa-user-slash"></i> Delete</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>

